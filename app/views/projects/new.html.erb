<% provide(:title, 'New Project') %>
<h1>Add A Project</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@project) do |f| %>

      <%= f.label :project_name %>
      <%= f.text_field :project_name, class: 'form-control' %>

      <%= f.label "Select Customer" %>
      <%= f.collection_select(:customer_id, Customer.all, :id, :company) %>

      <%= f.submit "Add Project", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
